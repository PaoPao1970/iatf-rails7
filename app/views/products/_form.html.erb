
<div class="container-fruid">
  <div class="table-responsive">
    <table class="table table-bordered">

  <thead>
    <tr>
     <table border="1"> 
     <th>項目</th>
      <th>ID</th>
    
      <th>図番</th>
      <th>材料コード</th>
      <th>フェーズ</th>
      <th>項目</th>
      <th>コメント</th>
      <th>登録日</th>
      <th>完了予定日</th>
      <th>完了日</th>
      <th>達成度(%)</th>
      <th>ステイタス</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% koumoku.each do |koumo| %>
    <% sonzai= false %>
      <tr>
        <td><%= koumo %></td>
      
        <% products.each do |pro| %>
     

          <% if pro.food==koumo %>
              <% if sonzai==true %>            
                <tr><td><%= koumo %></td>
              <% end %>
          <% sonzai=true %>

            <td><%= pro.id %></td>
            <td><%= pro.partnumber %></td>
            <td><%= pro.materialcode %></td>
            <td><%= pro.phase %></td>
            <td><%= pro.food %></td>
            <td><%= pro.description %></td>
            <td><%= l pro.start_time  %></td>
            <td><%= l pro.deadline_at  %></td>
            <% if pro.status=="完了" %>
              <td><%= l pro.end_at  %></td>
            <% else %>
              <td><%= "------"  %></td>
            <% end %>
            <td><%= pro.goal_attainment_level %></td>
            <td><%= pro.status %></td>
            <td><%= link_to '詳細', pro ,class:"btn btn-info"%></td>
            <td><%= link_to '編集', edit_product_path(pro) ,class:"btn btn-warning"%></td>
            <td><%= link_to '削除', pro, method: :delete, data: { confirm: '本当に削除しますか?' },class:"btn btn-danger" %></td>

            <%= render partial: "attached_file", locals: { pro: pro }  %>

          <% end %>
        <% end %>          
      </tr>
     <% end %>
    </tbody>
  </table>

  </div>
</div>

<br>
<%= link_to '戻る', products_path ,class:"btn btn-secondary"%>